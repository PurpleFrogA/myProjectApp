<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B06CD794">

        <TextView
            android:id="@+id/nameProfile"
            android:layout_width="345dp"
            android:layout_height="58dp"
            android:layout_marginStart="46dp"
            android:layout_marginEnd="20dp"
            android:text="Name"
            android:textColor="#9913AA"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/emailProfile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/photoProfile" />

        <TextView
            android:id="@+id/emailProfile"
            android:layout_width="345dp"
            android:layout_height="58dp"
            android:layout_marginStart="46dp"
            android:layout_marginEnd="20dp"
            android:text="Email"
            android:textColor="#9913AA"
            android:textSize="17sp"
            app:layout_constraintBottom_toTopOf="@+id/numberProfile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameProfile" />

        <TextView
            android:id="@+id/numberProfile"
            android:layout_width="345dp"
            android:layout_height="58dp"
            android:layout_marginStart="46dp"
            android:layout_marginEnd="20dp"
            android:text="Phone number"
            android:textColor="#9913AA"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/addressProfile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emailProfile" />

        <TextView
            android:id="@+id/addressProfile"
            android:layout_width="345dp"
            android:layout_height="58dp"
            android:layout_marginStart="46dp"
            android:layout_marginEnd="20dp"
            android:text="Address"
            android:textColor="#9913AA"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/genderProfile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/numberProfile" />

        <TextView
            android:id="@+id/genderProfile"
            android:layout_width="345dp"
            android:layout_height="58dp"
            android:layout_marginStart="46dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="55dp"
            android:text="Gender"
            android:textColor="#9913AA"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/logOutProfile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addressProfile" />

        <ImageView
            android:id="@+id/photoProfile"
            android:layout_width="150dp"
            android:layout_height="156dp"
            android:layout_marginStart="131dp"
            android:layout_marginTop="39dp"
            android:layout_marginEnd="130dp"
            android:layout_marginBottom="60dp"
            android:src="@drawable/user"
            app:layout_constraintBottom_toTopOf="@+id/nameProfile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/logOutProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="54dp"
            android:layout_marginEnd="269dp"
            android:layout_marginBottom="83dp"
            android:background="#72247C"
            android:text="log out"
            android:textColor="#B06CD794"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/genderProfile" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>